{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/turistické-cíle/draft/schémata/turistické-cíle.json",
    "type": "object",
    "title": "Turistické cíle",
    "properties": {
        "iri": {
            "$id": "#/properties/iri",
            "type": "string",
            "format": "iri",
            "title": "Identifikátor",
            "examples": ["https://www.spilberk.cz/"]
        },
        "název": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
        },
        "popis": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
        },
        "kouření_povoleno": {
            "$id": "#/properties/kouření_povoleno",
            "type": "boolean",
            "title": "Kouření povoleno",
            "examples": true
        },
        "veřejná_přístupnost": {
            "$id": "#/properties/veřejná_přístupnost",
            "type": "boolean",
            "title": "Veřejná přístupnost",
            "examples": true
        },
        "kapacita": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/množství.json"
        },
        "obrázek": {
            "type": "array",
            "items": {
                "$id": "#/properties/obrázek/items/obrázek/",
                "type": "string",
                "format": "iri",
                "title": "Obrázek",
                "examples": ["https://upload.wikimedia.org/wikipedia/commons/4/47/Mesto_Brno_-_hrad_Spilberk.jpg"]
            }
        },          
        "vlastník": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
            }
        },
        "provozovatel": {
            "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
        },
        "umístění": {
            "$ref": "https://ofn.gov.cz/umístění/draft/schémata/umístění.json"
        },
        "kontakt": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/kontakty/draft/schémata/kontakt.json"
            }
        },
        "bezbariérovost": {
            "$ref": "https://ofn.gov.cz/bezbariérovost/draft/schémata/bezbariérovost.json"
        },
        "vstupné": {
            "$ref": "https://ofn.gov.cz/vstupné/draft/schémata/vstupné.json"     
        },
        "otevírací_doba": {
            "$ref": "https://ofn.gov.cz/časová-specifikace/draft/schémata/časová-specifikace.json"
        },
        "jazyk": {
            "type": "array",
            "items": {
                "id": "#/properties/jazyk/items/jazyk/",
                "type": "string",
                "format": "iri",
                "title": "Jazyk",
                "examples": ["http://publications.europa.eu/resource/authority/language/BOS"]
            }    
        },
        "typ": {
            "type": "array",
            "items": {
                "id": "#/properties/typ/items/typ/",
                "type": "string",
                "format": "iri",
                "title": "Typ",
                "examples": ["https://data.mvcr.gov.cz/zdroj/číselníky/typy-turistických-cílů/položky/přírodní"]
            }
        }
    }
}