{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/turistický-cíl/draft/schémata/turistický-cíl.json",
    "type": "array",
    "title": "Turistický cíl",
    "items": {
        "$id": "#/items",
        "type": "object",
        "title": "Turistický cíl",
        "properties": {
            "iri": {
                "$id": "#/items/properties/id",
                "type": "string",
                "format": "iri",
                "title": "Identifikátor",
                "description": "Unikátní identifikátor v podobě URL",
                "examples": [
                    "https://www.spilberk.cz/"
                ]
            },
            "název": {
                "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
            },
            "popis": {
                "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
            },
            "obrázek": {
                    "$id": "#/items/properties/id",
                    "type": "string",
                    "format": "iri",
                    "title": "Obrázek",
                    "description": "Obrázek daného objektu",
                    "examples": [
                      "https://upload.wikimedia.org/wikipedia/commons/4/47/Mesto_Brno_-_hrad_Spilberk.jpg"
                      ]
            },
            "kouření_povoleno": {
                    "$id": "#/items/properties/id",
                    "type": "boolean",
                    "title": "Kouření povoleno",
                    "description": "Určuje, zda je možné kouření tabákových výrobků.",
                    "examples": true
            },
            "veřejná přístupnost": {
                    "$id": "#/items/properties/id",
                    "type": "boolean",
                    "title": "Veřejná přístupnost",
                    "description": "Určuje, zda je daný objekt veřejně přístupný.",
                    "examples": true
            },
              "kapacita": {
                    "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/množství.json"
            },          
            "vlastník": {
                "type": "array",
                "items": {
                    "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
                }
            },
            "provozovatel": {
                    "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
            },
            "umístění": {
                    "$ref": "https://ofn.gov.cz/umístění/draft/schémata/umístění.json"
            },
            "kontakt": {
                "type": "array",
                "items": {
                    "$ref": "https://ofn.gov.cz/kontakty/draft/schémata/kontakt.json"
                }
            },
            "vstupné": {
                "type": "array",
                "items": {
                    "$ref": "https://ofn.gov.cz/vstupné/draft/schémata/vstupné.json"
                }
            },
            "otevírací_doba": {
                "type": "array",
                "items": {
                    "$ref": "https://ofn.gov.cz/otevírací-doba/draft/schémata/otevírací-doba.json"
                }
            },
            "bezbariérovost": {
                "$ref": "https://ofn.gov.cz/bezbariérovost/draft/schémata/bezbariérovost.json"
            },
            "jazyk": {
                "$id": "#/items/properties/id",
                "type": "string",
                "format": "iri",
                "title": "Jazykový identifikátor",
                "description": "Dostupný jazyk v místě turistického objektu vycházející ze specifikace Evropského číselníku jazyků",
                "examples": [
                    "https://op.europa.eu/cs/web/eu-vocabularies/at-concept/-/resource/authority/language/ARA/"
                ]
            },
             
            "typ turistického cíle": {
                "type": "array",
                "items": {
                    "$id": "#/items/properties/typ-turistického-cíle/items",
                    "type": "object",
                    "title": "Typ turistického cíle",
                    "description": "Kategorizace turistického cíle",
                    "properties": {
                        "název": {
                            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
                        }
                    }
                }
            }
        }
    }
}