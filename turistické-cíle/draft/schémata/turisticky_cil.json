{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/aktuality/draft/schémata/turistický-cíl.json",
    "type": "array",
    "title": "Turistický cíl",
    "items": {
        "$id": "#/items",
        "type": "object",
        "title": "Turistický cíl",
        "properties": {
            "iri": {
                "$id": "#/items/properties/id",
                "type": "string",
                "format": "iri",
                "title": "Identifikátor",
                "description": "Unikátní identifikátor v podobě URL",
                "examples": [
                    "https://www.spilberk.cz/"
                ]
            },
            "název": {
                "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
            },
            "popis": {
                "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
            },
            "obrázek": {
                    "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/url.json"
            },
            "kouření": {
                    "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/boolean.json"
            },
            "přístupnost pro veřejnost": {
                    "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/boolean.json"
            },
              "kapacita": {
                    "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/celé-číslo.json"
            },          
            "vlastník": {
                "type": "array",
                "items": {
                    "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
                }
            },
            "provozovatel": {
                    "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
            },
            "umístění": {
                    "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/umístění.json"
            },
            "kontakt": {
                "type": "array",
                "items": {
                    "$ref": "https://ofn.gov.cz/kontakty/draft/schémata/kontakt.json"
                }
            },
            "vstupné": {
                "type": "array",
                "items": {
                    "$ref": "https://ofn.gov.cz/vstupné/draft/schémata/vstupné.json"
                }
            },
            "otevírací_doba": {
                "type": "array",
                "items": {
                    "$ref": "https://ofn.gov.cz/otevírací-doba/draft/schémata/otevírací-doba.json"
                }
            },
            "bezbariérovost": {
                "$ref": "https://ofn.gov.cz/bezbariérovost/draft/schémata/bezbariérovost.json"
            },
            "jazyk": {
                "type": "array",
                "items": {
                    "$id": "#/items/properties/jazyk/items",
                    "type": "object", 
                    "title": "Jazyk",
                    "description": "Dostupný jazyk", 
                    "properties": {
                        "kód": {
                            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
                        },
                        "název": {
                            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
                        }
                    }    
                }
            },             
            "typ turistického cíle": {
                "type": "array",
                "items": {
                    "$id": "#/items/properties/typ-turistického-cíle/items",
                    "type": "object",
                    "title": "Typ turistického cíle",
                    "description": "Kategorizace turistického cíle",
                    "properties": {
                        "název": {
                            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
                        }
                    }
                }
            }
        }
    }
}