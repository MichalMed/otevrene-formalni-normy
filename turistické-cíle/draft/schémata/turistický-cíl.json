{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"$id": "https://ofn.gov.cz/turistické-cíle/draft/schémata/turistický-cíl.json",
	"type": "object",
	"title": "Turistický cíl",
	"required": ["typ"],
	"properties": {
		"typ": {
			"const": "Turistický cíl"
		},
		"iri": {

			"type": "string",
			"format": "iri",
			"title": "Identifikátor",
			"examples": [
				"https://www.trebic.cz/zdroj/aktualita/2020/dopadení-lupiče-na-francouzské-ulici"
			]
		},
		"název": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
		},
		"popis": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
		},
		"vytvořeno": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-okamžik.json"
		},
		"aktualizováno": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-okamžik.json"
		},
		"relevantní_do": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-okamžik.json"
		},
		"zneplatněno": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-okamžik.json"
		},
		"příloha": {
			"$ref": "https://ofn.gov.cz/digitální-objekty/draft/schémata/digitální-objekty.json"
		},
		"kouření_povoleno": {
			"type": "boolean",
			"title": "Kouření povoleno",
			"examples": true
		},
		"veřejná_přístupnost": {
			"type": "boolean",
			"title": "Veřejná přístupnost",
			"examples": true
		},
		"kapacita": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/množství.json"
		},
		"vlastník": {
			"type": "array",
			"items": {
				"$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
			}
		},
		"provozovatel": {
			"$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
		},
		"umístění": {
			"$ref": "https://ofn.gov.cz/umístění/draft/schémata/umístění.json"
		},
		"kontakt": {
			"type": "array",
			"items": {
				"$ref": "https://ofn.gov.cz/kontakty/draft/schémata/kontakt.json"
			}
		},
		"bezbariérovost": {
			"$ref": "https://ofn.gov.cz/bezbariérovost/draft/schémata/bezbariérovost.json"
		},
		"vstupné": {
			"$ref": "https://ofn.gov.cz/vstupné/draft/schémata/více-vstupných.json"
		},
		"otevírací_doba": {
			"$ref": "https://ofn.gov.cz/časová-specifikace/draft/schémata/seznam-časových-specifikací.json"
		},
		"typ_turistického_cíle": {
			"type": "string",
			"format": "iri",
			"pattern": "^https\\:\/\/data\\.mvcr\\.gov\\.cz\/zdroj\/číselníky\/typy-turistických-cílů\/položky\/.*$",
			"title": "Typ turistického cíle",
			"examples": [
				"https://data.mvcr.gov.cz/zdroj/číselníky/typy-turistických-cílů/položky/přírodní"
			]
		},
		"jazyk": {
			"type": "array",
			"items": {
				"type": "string",
				"format": "iri",
				"pattern": "^http\\:\/\/publications\\.europa\\.eu\/resource\/authority\/language\/.*$",
				"title": "Jazyk",
				"examples": [
					"http://publications.europa.eu/resource/authority/language/BOS"
				]
			}
		}
	}
}