{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.poskytovatel.cz/cesta-k-json-schématům/číselník-měn.schema.json",
  "required": [
    "typ",
    "id",
    "název-číselníku",
    "položky"
  ],
  "type": "object",
  "properties": {
    "typ": {
      "type": "string",
      "default": "číselník",
      "pattern": "^číselník$"
    },
    "id": {
      "type": "string",
      "default": "číselník/měny",
      "pattern": "^číselník/měny$"
    },
    "název-číselníku": {
      "type": "object",
      "properties": {
        "cs": {
          "type": "string"
        },
        "en": {
          "type": "string"
        }
      }
    },
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "typ": {
            "type": "string",
            "default": "položka"
          },
          "id": {
            "type": "string",
            "examples": [
              "číselník/měny/položka/64"
            ],
            "pattern": "^číselník/měny/položka/[0-9]+$"
          },
          "kód": {
            "type": "string",
            "examples": [
              "280"
            ],
            "pattern": "^[0-9]+$"
          },
          "název": {
            "type": "object",
            "examples": [
              {"cs" : "bhútánský ngultrum", "en" : "bhutanese ngultrum"}
            ],
            "properties": {
              "cs": {
                "type": "string"
              },
              "en": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}