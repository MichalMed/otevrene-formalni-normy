{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.poskytovatel.cz/cesta-k-json-schématům/číselník-měn.schema.json",
  "required": [
    "typ",
    "id",
    "název-číselníku",
    "položky"
  ],
  "type": "object",
  "properties": {
    "typ": {
      "type": "string",
      "default": "číselník",
      "pattern": "^číselník$"
    },
    "id": {
      "type": "string",
      "default": "číselník/měny",
      "pattern": "^číselník/měny$"
    },
    "název-číselníku": {
      "type": "object",
      "properties": {
        "cs": {
          "type": "string"
        },
        "en": {
          "type": "string"
        }
      }
    },
    "platnost-číselníku": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "default": "číselník/měny/platnost",
          "pattern": "^číselník/měny/platnost$"
        },
        "datum_začátku": {
          "type": "string",
          "examples": [
            "2009-01-01"
          ],
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "datum_konce": {
          "type": "string",
          "examples": [
            "2020-12-31"
          ],
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        }
      }
    },
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "typ": {
            "type": "string",
            "default": "položka"
          },
          "id": {
            "type": "string",
            "examples": [
              "číselník/měny/položka/64"
            ],
            "pattern": "^číselník/měny/položka/[0-9]+$"
          },
          "kód": {
            "type": "string",
            "examples": [
              "280"
            ],
            "pattern": "^[0-9]+$"
          },
          "název": {
            "type": "object",
            "examples": [
              {"cs" : "bhútánský ngultrum", "en" : "bhutanese ngultrum"}
            ],
            "properties": {
              "cs": {
                "type": "string"
              },
              "en": {
                "type": "string"
              }
            }
          },
          "alt-název": {
            "type": "object",
            "examples": [
              {"cs" : "ngultrum", "en" : "ngultrum"}
            ],
            "properties": {
              "cs": {
                "type": "string"
              },
              "en": {
                "type": "string"
              }
            }
          },
          "definice": {
            "type": "object",
            "examples": [
              {"cs" : "1 ngultrum=100 chhetrum.", "en" : "1 ngultrum=100 chhetrum."}
            ],
            "properties": {
              "cs": {
                "type": "string"
              },
              "en": {
                "type": "string"
              }
            }
          },
          "popis": {
            "type": "object",
            "examples": [
              {"cs" : "Bhútánský ngultrum je měnou asijského království Bhútán. Jeho ISO 4217 kód je BTN."}
            ],
            "properties": {
              "cs": {
                "type": "string"
              },
              "en": {
                "type": "string"
              }
            }
          },
          "platnost": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "examples": [
                  "číselník/měny/položka/64/platnost"
                ],
                "pattern": "^číselník/měny/položka/[0-9]+/platnost$"
              },
              "datum_začátku": {
                "type": "string",
                "examples": [
                  "2009-01-01"
                ],
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
              },
              "datum_konce": {
                "type": "string",
                "examples": [
                  "2020-06-30"
                ],
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
              }
            }
          }            
        }
      }
    }
  }
}