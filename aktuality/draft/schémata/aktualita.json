{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/aktuality/draft/schémata/aktualita.json",
    "type": "object",
    "title": "Aktualita",
    "properties": {
        "informuje_o": {
            "$id": "#/properties/informuje-o",
            "type": "string",
            "format": "iri",
            "title": "Informuje o",
            "examples": [
                "https://data.brno.cz/zdroj/akce/2019/vinobraní"
            ]
        },
        "téma": {
            "type": "array",
            "items": {
                "id": "#/properties/téma",
                "type": "string",
                "format": "iri",
                "title": "Téma aktuality",
                "examples": [
                        "https://data.mvcr.gov.cz/zdroj/číselníky/témata-událostí/položky/doprava"
                ]
            }
        },
        "oznamovatel": {
                "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
        },
        "příloha": {
            "$id": "#/properties/příloha",
            "type": "array",
            "title": "Příloha",
            "items": {
                "$id": "#/properties/příloha/items/příloha",
                "type": "object",
                "title": "Příloha",
                "properties": {
                    "název": {
                        "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
                    },
                    "url": {
                        "$id": "#/properties/příloha/items/příloha/properties/url",
                        "type": "string",
                        "format": "url",
                        "title": "URL přílohy",
                        "examples": [
                            "https://www.trebic.cz/prilohy/zaznam_z_prepadeni"
                        ]
                    }
                }
            }
        },
        "additionalProperties": {
              "$ref": "https://ofn.gov.cz/věc/draft/schémata/věc.json"
            }
    }
}