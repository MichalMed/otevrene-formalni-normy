{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/agendy.schema.json",
  "required": [
    "položky"
  ],
  "type": "object",
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "agenda",
            "pattern": "^agenda$"
          },
          "id": {
            "type": "string",
            "examples": [
              "agenda/A1046"
            ],
            "pattern": "^agenda/A[0-9]+$"
          },
          "název": {
            "type": "object",
            "properties": {
              "cs": {
                "type": "string",
                "examples": [
                  "Agenda řidičů"
                ]
              }
            }
          },
          "kód": {
            "type": "string",
            "examples": [
              "A1046"
            ],
            "pattern": "^A[0-9]+$"
          },
          "ustanovení": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "ustanovení-právního-předpisu",
                  "pattern": "^ustanovení-právního-předpisu$"
                },
                "označení": {
                  "type": "string",
                  "examples": [
                    "§ 1 zákona č. 1/1000 Sb."
                  ]
                }
              }
            }
          },
          "činnosti": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "činnost",
                  "pattern": "^činnost$"
                },
                "id": {
                  "type": "string",
                  "examples": [
                    "činnost/A1046/CR6072"
                  ],
                  "pattern": "^činnost/A[0-9]+/CR[0-9]+$"
                },
                "kód-činnosti": {
                  "type": "string",
                  "examples": [
                    "CR6072"
                  ],
                  "pattern": "^CR[0-9]+$"
                },
                "název-činnosti": {
                  "type": "object",
                  "properties": {
                    "cs": {
                      "type": "string",
                      "examples": [
                        "Vedení centrálního registru řidičů"
                      ]
                    }
                  }
                },
                "popis-činnosti": {
                  "type": "object",
                  "properties": {
                    "cs": {
                      "type": "string",
                      "examples": [
                        "361/2000 124-2e"
                      ]
                    }
                  }
                },
                "typ-činnosti": {
                  "type": "string",
                  "examples": [
                    "typ-činnosti/1"
                  ],
                  "pattern": "^typ-činosti/[0-9]+$"
                },
                "platnost-činnosti-od": {
                  "type": "string",
                  "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                },
                "platnost-činnosti-do": {
                  "type": "string",
                  "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                }
              }
            }
          },
          "vykonávající-ovm": {
            "type": "array",
            "items": {
              "type": "string",
              "examples": [
                "orgán-veřejné-moci/12345678-1"
              ],
              "pattern": "^orgán-veřejné-moci/[0-9]{8}-[0-9]+$"
            }
          },
          "vykonávající-kategorie-ovm": {
            "type": "array",
            "items": {
              "type": "string",
              "examples": [
                "kategorie-ovm/KO11"
              ],
              "pattern": "^kategorie-ovm/KO[0-9]+$"
            }
          },
          "vykonávající-spuú": {
            "type": "array",
            "items": {
              "type": "string",
              "examples": [
                "soukromoprávní-uživatel-údajů/12345678-1"
              ],
              "pattern": "^soukromoprávní-uživatel-údajů/[0-9]{8}-[0-9]+$"
            }
          },
          "vykonávající-kategorie-spuú": {
            "type": "array",
            "items": {
              "type": "string",
              "examples": [
                "kategorie-spuú/KS11"
              ],
              "pattern": "^kategorie-spuú/KS[0-9]+$"
            }
          },
          "ohlašovatel": {
            "type": "string",
            "examples": [
              "orgán-veřejné-moci/00000001-1"
            ],
            "pattern": "^orgán-veřejné-moci/[0-9]{8}-[0-9]+$"
          },
          "vznik": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "zánik": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "platnost-od": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "platnost-do": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "poslední-změna": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          }
        }
      }
    }
  }
}