{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/orgány-veřejné-moci.schema.json",
  "required": [
    "položky"
  ],
  "type": "object",
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "orgán-veřejné-moci",
            "examples": [
              "orgán-veřejné-moci"
            ],
            "pattern": "^orgán-veřejné-moci$"
          },
          "id": {
            "type": "string",
            "examples": [
              "orgán-veřejné-moci/12345678-1"
            ],
            "pattern": "^orgán-veřejné-moci/[0-9]{8}-[0-9]+$"
          },
          "identifikátor": {
            "type": "string",
            "examples": [
              "12345678-1"
            ],
            "pattern": "^[0-9]{8}-[0-9]+$"
          },
          "název": {
            "type": "object",
            "examples": [
              {
                "cs": "Testovací orgán veřejné moci 1"
              }
            ],
            "properties": {
              "cs": {
                "type": "string",
                "examples": [
                  "Testovací orgán veřejné moci 1"
                ]
              }
            }
          },
          "vnitřní-organizační-jednotka": {
            "type": "boolean"
          },
          "ičo": {
            "type": "string",
            "examples": [
              "12345678"
            ],
            "pattern": "^[0-9]{8}$"
          },
          "datové-schránky": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "datová-schránka",
                  "pattern": "^datová-schránka$"
                },
                "id": {
                  "type": "string",
                  "examples": [
                    "datová-schránka/0abcdef"
                  ],
                  "pattern": "^datová-schránka/[0-9a-z]{7}$"
                },
                "typ-ds": {
                  "type": "string",
                  "examples": [
                    "typ-datové-schránky/OVM"
                  ],
                  "pattern": "^typ-datové-schránky/[A-Z]+$"
                },
                "identifikátor-ds": {
                  "type": "string",
                  "examples": [
                    "0abcdef"
                  ],
                  "pattern": "^[0-9a-z]{7}$"
                }
              },
      			  "examples": [
                      {
      				  "type": "datová-schránka",
      				  "id": "datová-schránka/0abcdef",
      	     		  "typ-ds": "typ-datové-schránky/OVM",
      				  "identifikátor-ds": "0abcdef"
      			    }
      			  ]
            }
          },
          "ustanovení": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "ustanovení-právního-předpisu",
                  "pattern": "^ustanovení-právního-předpisu$"
                },
                "označení": {
                  "type": "string",
                  "examples": [
                    "§ 1 zákona č. 1/1000 Sb."
                  ]
                }
              }
            }
          },
          "seznam-kategorií": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "kategorie": {
                  "type": "string",
                  "examples": [
                    "kategorie-ovm/KO107"
                  ],
                  "pattern": "^kategorie-ovm/KO[0-9]+$"
                },
                "zařazení-od": {
                  "type": "string",
                  "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                },
                "zařazení-do": {
                  "type": "string",
                  "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                }
              }
            }
          },
          "adresa-místa-pobytu": {
            "$ref": "#/definitions/adresní-místo"
          },
          "adresa-sídla": {
            "$ref": "#/definitions/adresní-místo"
          },
          "osoba-v-čele": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "osoba",
                  "pattern": "^osoba$"
                },
                "jméno": {
                  "type": "string",
                  "default": "",
                  "pattern": "^.*$"
                }
              }
            }
          },
          "zahájení": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "ukončení": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "pozastavení-od": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "pozastavení-do": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "přerušení-od": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "přerušení-do": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "pracoviště-ovm": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "pracoviště",
                  "pattern": "^pracoviště$"
                },
                "id": {
                  "type": "string",
                  "examples": [
                    "pracoviště/1"
                  ],
                  "pattern": "^pracoviště/[0-9]+$"
                },
                "adresa-pr": {
                  "$ref": "#/definitions/adresní-místo"
                },
                "adresa-pr-txt": {
                  "type": "string"
                },
                "stát-pr": {
                  "type": "string",
                  "examples": [
                    "stát/1"
                  ],
                  "pattern": "^stát/[0-9]+$"
                },
                "otevření": {
                  "type": "string",
                  "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                },
                "uzavření": {
                  "type": "string",
                  "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                }
              }
            }
          },
          "nadřízený-ovm": {
            "type": "string",
            "examples": [
              "orgán-veřejné-moci/00000001-1"
            ],
            "pattern": "^orgán-veřejné-moci/[0-9]{8}-[0-9]+$"
          },
          "právní-forma": {
            "type": "string",
            "examples": [
              "právní-forma/1"
            ],
            "pattern": "^právní-forma/[0-9]$"
          }
        }
      }
    }
  },
  "definitions": {
    "adresní-místo": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "examples": [
            "https://linked.cuzk.cz/resource/ruian/adresni-misto/22305190"
          ],
          "pattern": "^https://linked.cuzk.cz/resource/ruian/adresni-misto/[0-9]{8}$"
        },
        "kód": {
          "type": "string",
          "examples": [
            "22305190"
          ],
          "pattern": "^[0-9]{8}$"
        }
      }
    }
  }
}