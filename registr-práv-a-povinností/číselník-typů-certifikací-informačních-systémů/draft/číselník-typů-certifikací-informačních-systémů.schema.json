{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/číselník-typů-certifikací-informačních-systémů.schema.json",
  "required": [
    "type",
    "id",
    "název-číselníku",
    "položky"
  ],
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "default": "číselník",
      "pattern": "^číselník$"
    },
    "id": {
      "type": "string",
      "default": "číselník/typy-certifikací-informačních-systémů",
      "pattern": "^číselník/typy-certifikací-informačních-systémů$"
    },
    "název-číselníku": {
      "type": "object",
      "properties": {
        "cs": {
          "type": "string"
        }
      }
    },
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "typ-certifikace"
          },
          "id": {
            "type": "string",
            "examples": [
              "typ-certifikace-informačního-systému/CERT_21"
            ],
            "pattern": "^typ-certifikace-informačního-systému/CERT_[0-9]+$"
          },
          "kód": {
            "type": "string",
            "examples": [
              "CERT_21"
            ],
            "pattern": "^CERT_[0-9]+$"
          },
          "popis": {
            "type": "object",
            "examples": [
              {"cs" : "ISMS - ISO/IEC 27001:2005"}
            ],
            "properties": {
              "cs": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}