{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/působnost-v-agendách.schema.json",
  "type": "object",
  "required": [
    "položky"
  ],
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "působnost",
            "pattern": "^působnost$"
          },
          "id": {
            "type": "string",
            "examples": [
              "působnost/A1046/12345678-1"
            ],
            "pattern": "^působnost/A[0-9]+/[0-9]+-[0-9]+$"
          },
          "registrace": {
            "type": "object",
            "properties": {
              "agenda": {
                "type": "string",
                "examples": [
                  "agenda/A1046"
                ],
                "pattern": "^agenda/A[0-9]+$"
              },
              "ovm": {
                "type": "string",
                "examples": [
                  "orgán-veřejné-moci/12345678-1"
                ],
                "pattern": "^orgán-veřejné-moci/[0-9]+-[0-9]++$"
              },
              "spuú": {
                "type": "string",
                "examples": [
                  "soukromoprávní-uživatel-údajů/12345678-1"
                ],
                "pattern": "^soukromoprávní-uživatel-údajů/[0-9]+-[0-9]++$"
              },
              "datum": {
                "type": "string",
                "examples": [
                  "2018-01-01"
                ],
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
              }
            }
          },
          "činnosti": {
            "type": "array",
            "items": {
              "type": "string",
              "examples": [
                "činnost/A1046/CR6072"
              ],
              "pattern": "^činnost/A[0-9]+/CR[0-9]+$"
            }
          },
          "úkony": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "úkon": {
                  "type": "string",
                  "examples": [
                    "úkon/U12345"
                  ],
                  "pattern": "^úkon/U[0-9]+$"
                },
                "pracoviště": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "examples": [
                      "pracoviště/1"
                    ],
                    "pattern": "^pracoviště/[0-9]+$"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}