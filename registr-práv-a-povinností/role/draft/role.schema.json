  {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/role.schema.json",
    "required": [
      "položky"
    ],
    "type": "object",
    "properties": {
      "položky": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "default": "role",
              "pattern": "^role$"
            },
            "id": {
              "type": "string",
              "examples": [
                "role/A1046/CR6072/12345678-1"
              ],
              "pattern": "^role/A[0-9]+/CR[0-9]+/(([0-9]{8}-[0-9]+)|(KO[0-9]+)|(KS[0-9]+))$"
            },
            "ovm": {
              "type": "string",
              "examples": [
                "orgán-veřejné-moci/12345678-1"
              ],
              "pattern": "^orgán-veřejné-moci/[0-9]{8}-[0-9]+$"
            },
            "spuú": {
              "type": "string",
              "examples": [
                "soukromoprávní-uživatel-údajů/12345678-1"
              ],
              "pattern": "^soukromoprávní-uživatel-údajů/[0-9]{8}-[0-9]+$"
            },
            "kategorie-ovm": {
              "type": "string",
              "examples": [
                "kategorie-ovm/KO12"
              ],
              "pattern": "^kategorie-ovm/KO[0-9]+$"
            },
            "kategorie-spuú": {
              "type": "string",
              "examples": [
                "kategorie-spuú/KS11"
              ],
              "pattern": "^kategorie-spuú/KS[0-9]+$"
            },
            "činnost": {
              "type": "string",
              "examples": [
                "činnost/A1046/CR9999"
              ],
              "pattern": "^činnost/A[0-9]+/CR[0-9]+$"
            }
          }
        }
      }
    }
  }