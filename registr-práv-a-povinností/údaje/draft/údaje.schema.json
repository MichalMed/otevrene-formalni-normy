{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/údaje.schema.json",
  "required": [
    "položky"
  ],
  "type": "object",
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "objekt-subjekt",
            "pattern": "^objekt-subjekt$"
          },
          "id": {
            "type": "string",
            "examples": [
              "objekt-subjekt/1046-1"
            ],
            "pattern": "^objekt-subjekt/[0-9]+-[0-9]+$"
          },
          "kód": {
            "type": "string",
            "examples": [
              "1046-1"
            ],
            "pattern": "^[0-9]+-[0-9]+$"
          },
          "název": {
            "type": "object",
            "properties": {
              "cs": {
                "type": "string",
                "examples": [
                  "Řidič"
                ]
              }
            }
          },
          "popis": {
            "type": "object",
            "properties": {
              "cs": {
                "type": "string",
                "examples": [
                  "Údaje osoby řidič"
                ]
              }
            }
          },
          "ustanovení": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/ustanovení-právního-předpisu"
            }
          },
          "agenda": {
            "type": "string",
            "examples": [
              "agenda/A1046"
            ],
            "pattern": "^agenda/A[0-9]+$"
          },
          "údaje": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "údaj",
                  "pattern": "^údaj$"
                },
                "id": {
                  "type": "string",
                  "examples": [
                    "údaj/1046-1-2"
                  ],
                  "pattern": "^údaj/[0-9]+-[0-9]+-[0-9]+$"
                },
                "kód-údaje": {
                  "type": "string",
                  "examples": [
                    "1046-1-2"
                  ],
                  "pattern": "^[0-9]+-[0-9]+-[0-9]+$"
                },
                "název-údaje": {
                  "type": "object",
                  "properties": {
                    "cs": {
                      "type": "string",
                      "examples": [
                        "Osobní údaje uvedené v řidičském průkazu a v mezinárodním řidičském průkazu"
                      ]
                    }
                  }
                },
                "popis-údaje": {
                  "type": "object",
                  "properties": {
                    "cs": {
                      "type": "string",
                      "examples": [
                        "Osobní údaje"
                      ]
                    }
                  }
                },
                "typ-údaje": {
                  "type": "string",
                  "examples": [
                    "Nereferenční"
                  ]
                },
                "ustanovení-údaje": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/ustanovení-právního-předpisu"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "ustanovení-právního-předpisu": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "ustanovení-právního-předpisu",
          "pattern": "^ustanovení-právního-předpisu$"
        },
        "id": {
          "type": "string",
          "default": "",
          "examples": [
            "právní-předpis/361/2000/ustanovení/119/2/a"
          ],
          "pattern": "^(.*)$"
        },
        "paragraf": {
          "type": "string",
          "default": "",
          "examples": [
            "119"
          ],
          "pattern": "^(.*)$"
        },
        "odstavec": {
          "type": "string",
          "default": "",
          "examples": [
            "2"
          ],
          "pattern": "^(.*)$"
        },
        "písmeno": {
          "type": "string",
          "default": "",
          "examples": [
            "a"
          ],
          "pattern": "^(.*)$"
        },
        "předpis": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "default": "právní-předpis",
              "pattern": "^právní-předpis$"
            },
            "id": {
              "type": "string",
              "default": "",
              "examples": [
                "právní-předpis/361/2000"
              ],
              "pattern": "^(.*)$"
            },
            "název-předpisu": {
              "type": "object",
              "properties": {
                "cs": {
                  "type": "string",
                  "default": "",
                  "examples": [
                    "Zákon o silničním provozu"
                  ],
                  "pattern": "^(.*)$"
                }
              }
            },
            "číslo-předpisu": {
              "type": "string",
              "default": "",
              "examples": [
                "361"
              ],
              "pattern": "^(.*)$"
            },
            "rok-předpisu": {
              "type": "string",
              "default": "",
              "examples": [
                "2000"
              ],
              "pattern": "^(.*)$"
            }
          }
        }
      }
    }
  }
}