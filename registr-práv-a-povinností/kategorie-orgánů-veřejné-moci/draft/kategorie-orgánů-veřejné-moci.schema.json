{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/kategorie-orgánů-veřejné-moci.schema.json",
  "required": [
    "položky"
  ],
  "type": "object",
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "kategorie-ovm",
            "pattern": "^kategorie-ovm$"
          },
          "id": {
            "type": "string",
            "examples": [
              "kategorie-ovm/KO11"
            ],
            "pattern": "^kategorie-ovm/KO[0-9]+$"
          },
          "název": {
            "type": "object",
            "properties": {
              "cs": {
                "type": "string",
                "examples": [
                  "Obce s rozšířenou působností"
                ]
              }
            }
          },
          "identifikátor": {
            "type": "string",
            "examples": [
              "KO11"
            ],
            "pattern": "^KO[0-9]+$"
          },
          "ustanovení": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "ustanovení-právního-předpisu",
                  "pattern": "^ustanovení-právního-předpisu$"
                },
                "označení": {
                  "type": "string",
                  "examples": [
                    "§ 1 zákona č. 1/1000 Sb."
                  ]
                }
              }
            }
          },
          "ohlašovatel": {
            "type": "string",
            "examples": [
              "orgán-veřejné-moci/00000001-1"
            ],
            "pattern": "^orgán-veřejné-moci/[0-9]{8}-[0-9]+$"
          }
        }
      }
    }
  }
}