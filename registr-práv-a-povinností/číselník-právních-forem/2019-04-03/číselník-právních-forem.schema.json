{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/číselník-právních-forem.schema.json",
  "required": [
    "type",
    "id",
    "název-číselníku",
    "položky"
  ],
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "default": "číselník",
      "pattern": "^číselník$"
    },
    "id": {
      "type": "string",
      "default": "číselník/právní-formy",
      "pattern": "^číselník/právní-formy$"
    },
    "název-číselníku": {
      "type": "object",
      "properties": {
        "cs": {
          "type": "string"
        }
      }
    },
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "právní-forma"
          },
          "id": {
            "type": "string",
            "examples": [
              "právní-forma/100"
            ],
            "pattern": "^právní-forma/.+$"
          },
          "kód": {
            "type": "string",
            "examples": [
              "OVM"
            ],
            "pattern": "^.+$"
          },
          "popis": {
            "type": "object",
            "examples": [
              {"cs" : "Podnikající fyzická osoba tuzemská"}
            ],
            "properties": {
              "cs": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}