{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/veřejnoprávní-smlouvy.schema.json",
  "type": "object",
  "required": [
    "položky"
  ],
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "smlouva",
            "pattern": "^smlouva$"
          },
          "id": {
            "type": "string",
            "examples": [
              "smlouva/ABCD1234"
            ],
            "pattern": "^smlouva/.+$"
          },
          "identifikátor": {
            "type": "string",
            "examples": [
              "ABCD1234"
            ]
          },
          "uzavření": {
            "type": "string",
            "examples": [
              "2018-09-01"
            ],
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "ukončení": {
            "type": "string",
            "examples": [
              "2019-09-01"
            ],
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "na-dobu-neurčitou": {
            "type": "boolean",
            "default": false,
            "examples": [
              false
            ]
          },
          "rozhodnutí-o-předání": {
            "$ref": "#/definitions/rozhodnutí-založení"
          },
          "rozhodnutí-o-převzetí": {
            "$ref": "#/definitions/rozhodnutí-založení"
          },
          "rozhodnutí-o-schválení": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "default": "rozhodnutí-schválení",
                "pattern": "^rozhodnutí-schválení$"
              },
              "id": {
                "type": "string",
                "examples": [
                  "rozhodnutí/čjA1234567"
                ],
                "pattern": "^rozhodnutí/.+$"
              },
              "číslo-jednací": {
                "$ref": "#/definitions/číslo-jednací"
              },
              "datum": {
                "$ref": "#/definitions/datum"
              },
              "typ-rozhodnutí-schválení": {
                "type": "string",
                "examples": [
                  "typ-rozhodnutí-schválení/1"
                ],
                "pattern": "^typ-rozhodnutí-schválení/[0-9]+$"
              }
            }
          },
          "schvaluje": {
            "type": "string",
            "examples": [
              "orgán-veřejné-moci/12345678-1"
            ],
            "pattern": "^orgán-veřejné-moci/[0-9]+-[0-9]+$"
          },
          "převádí": {
            "type": "string",
            "examples": [
              "orgán-veřejné-moci/11111111-1"
            ],
            "pattern": "^orgán-veřejné-moci/[0-9]+-[0-9]+$"
          },
          "přebírá": {
            "type": "string",
            "examples": [
              "orgán-veřejné-moci/22222222-1"
            ],
            "pattern": "^orgán-veřejné-moci/[0-9]+-[0-9]+$"
          }
        }
      }
    }
  },
  "definitions": {
    "rozhodnutí-založení": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "rozhodnutí-založení",
          "pattern": "^rozhodnutí-založení$"
        },
        "id": {
          "type": "string",
          "examples": [
            "rozhodnutí/čjA1234567"
          ],
          "pattern": "^rozhodnutí/.+$"
        },
        "číslo-jednací": {
          "$ref": "#/definitions/číslo-jednací"
        },
        "datum": {
          "$ref": "#/definitions/datum"
        }
      }
    },
    "číslo-jednací": {
      "type": "string",
      "examples": [
        "čjA1234567"
      ]
    },
    "datum": {
      "type": "string",
      "examples": [
        "2018-09-01"
      ],
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    }
  }
}