{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/oprávnění-k-přístupu-k-údajům.schema.json",
  "required": [
    "položky"
  ],
  "type": "object",
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "oprávnění",
            "pattern": "^oprávnění$"
          },
          "id": {
            "type": "string",
            "examples": [
              "oprávnění-k-přístupu-k-údajům/A1046-A101-1"
            ],
            "pattern": "^oprávnění-k-přístupu-k-údajům/A[0-9]+-A[0-9]+-[0-9]+$"
          },
          "kód": {
            "type": "string",
            "examples": [
              "A1046-A101-1"
            ],
            "pattern": "^A[0-9]+-A[0-9]+-[0-9]+$"
          },
          "z-agendy": {
            "type": "string",
            "examples": [
              "agenda/A101"
            ],
            "pattern": "^agenda/A[0-9]+$"
          },
          "do-agendy": {
            "type": "string",
            "examples": [
              "agenda/A1046"
            ],
            "pattern": "^agenda/A[0-9]+$"
          },
          "údaje": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "oprávnění-údaj",
                  "pattern": "^oprávnění-údaj$"
                },
                "id": {
                  "type": "string",
                  "examples": [
                    "oprávnění-k-přístupu-k-údaji/A1046-A101-1/101-1-1"
                  ],
                  "pattern": "^oprávnění-k-přístupu-k-údaji/A[0-9]+-A[0-9]+-[0-9]+/[0-9]+-[0-9]+-[0-9]+$"
                },
                "úroveň-přístupu": {
                  "type": "string",
                  "examples": [
                    "R"
                  ],
                  "pattern": "^(R|W|RH)$"
                },
                "údaj": {
                  "type": "string",
                  "examples": [
                    "údaj/101-1-1"
                  ],
                  "pattern": "^údaj/[0-9]+-[0-9]+-[0-9]+$"
                }
              }
            }
          },
          "role": {
            "type": "array",
            "items": {
              "type": "string",
              "examples": [
                "role/A1046/CR6072/12345678-1"
              ],
              "pattern": "^role/A[0-9]+/CR[0-9]+/(([0-9]{8}-[0-9]+)|(KO[0-9]+)|(KS[0-9]+))$"
            }
          },
          "ustanovení": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "ustanovení-právního-předpisu",
                  "pattern": "^ustanovení-právního-předpisu$"
                },
                "id": {
                  "type": "string",
                  "examples": [
                    "právní-předpis/130/2000/ustanovení/11/3/a"
                  ],
                  "pattern": "^právní-předpis/[0-9]{1,4}/[0-9]{4}/ustanovení(/.+)+$"
                },
                "označení": {
                  "type": "string",
                  "examples": [
                    "§ 1 zákona č. 1/1000 Sb."
                  ]
                },
                "paragraf": {
                  "type": "string"
                },
                "odstavec": {
                  "type": "string"
                },
                "písmeno": {
                  "type": "string"
                },
                "předpis": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "default": "právní-předpis",
                      "pattern": "^právní-předpis$"
                    },
                    "id": {
                      "type": "string",
                      "examples": [
                        "právní-předpis/130/2000"
                      ],
                      "pattern": "^právní-předpis/[0-9]{1,4}/[0-9]{4}$"
                    },
                    "název-předpisu": {
                      "type": "object",
                      "examples": [
                        {
                          "cs": "zákon o volbách do zastupitelstev krajů a o změně některých zákon"
                        }
                      ],
                      "properties": {
                        "cs": {
                          "type": "string",
                          "examples": [
                            "zákon o volbách do zastupitelstev krajů a o změně některých zákon"
                          ]
                        }
                      }
                    },
                    "číslo-předpisu": {
                      "type": "string",
                      "examples": [
                        "130"
                      ]
                    },
                    "rok-předpisu": {
                      "type": "string",
                      "examples": [
                        "2000"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}