{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/agendové-informační-systémy.schema.json",
  "required": [
    "položky"
  ],
  "type": "object",
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "agendový-informační-systém",
            "pattern": "^agendový-informační-systém$"
          },
          "id": {
            "type": "string",
            "examples": [
              "agendový-informační-systém/6500"
            ],
            "pattern": "^agendový-informační-systém/[0-9]+$"
          },
          "název": {
            "type": "object",
            "properties": {
              "cs": {
                "type": "string",
                "examples": [
                  "Agendový informační systém evidence obyvatel"
                ]
              }
            }
          },
          "kód": {
            "type": "string",
            "examples": [
              "6100"
            ],
            "pattern": "^[0-9]+$"
          },
          "správce": {
            "type": "string",
            "examples": [
              "orgán-veřejné-moci/12345678-1"
            ],
            "pattern": "^orgán-veřejné-moci/[0-9]{8}-[0-9]+$"
          }
        }
      }
    }
  }
}