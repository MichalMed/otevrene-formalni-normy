{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/agendového informačního systému.schema.json",
  "required": [
    "položky"
  ],
  "type": "object",
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "agendový-informační-systém",
            "pattern": "^agendový-informační-systém$"
          },
          "id": {
            "type": "string",
            "examples": [
              "agendový-informační-systém/6500"
            ],
            "pattern": "^agendový-informační-systém/6500+$"
          },
          "název": {
            "type": "object",
            "properties": {
              "cs": {
                "type": "string",
                "examples": [
                  "Agendový informační systém evidence obyvatel"
                ]
              }
            }
          },
          "kód": {
            "type": "string",
            "examples": [
              "6100"
            ],
            "pattern": "^6100+$"
          },
          "správce": {
            "type": "string",
            "examples": [
              "orgán-veřejné-moci/12345678-1"
            ],
            "pattern": "^orgán-veřejné-moci/[0-9]{8}-[0-9]+$"
          },
          "agendy": {
            "type": "array",
            "items": {
              "type": "string",
              "default": "",
              "examples": [
                 "agenda/A1046"
              ],
              "pattern": "^agenda/A[0-9]+$"
            }
          },
          "objekty-subjekty": {
            "type": "array",
            "items": {
              "type": "string",
              "default": "",
              "examples": [
                 "objekt-subjekt/1046-1"
              ],
              "pattern": "^objekt-subjekt/[0-9]+-[0-9]+$"
            }
          }
        }
      }
    }
  }
}