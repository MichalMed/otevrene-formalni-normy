{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/využití-agendových-informačních-systémů.schema.json",
  "type": "object",
  "required": [
    "položky"
  ],
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ais": {
            "type": "string",
            "examples": [
              "agendový-informační-systém/6500"
            ],
            "pattern": "^agendový-informační-systém/[0-9]+$"
          },
          "působnost": {
            "type": "string",
            "examples": [
              "působnost/A1046/12345678-1"
            ],
            "pattern": "^působnost/A[0-9]+/[0-9]{8}(\\.[0-9]+)?$"
          },
          "činnost": {
            "type": "string",
            "examples": [
              "činnost/A1046/CR6072"
            ],
            "pattern": "^činnost/A[0-9]+/CR[0-9]+$"
          }
        }
      }
    }
  }
}