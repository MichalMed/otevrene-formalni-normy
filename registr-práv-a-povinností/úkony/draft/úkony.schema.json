{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/úkony.schema.json",
  "required": [
    "položky"
  ],
  "type": "object",
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "úkon",
            "pattern": "^úkon$"
          },
          "id": {
            "type": "string",
            "examples": [
              "úkon/U12345"
            ],
            "pattern": "^úkon/U[0-9]+$"
          },
          "identifikátor": {
            "type": "string",
            "examples": [
              "U12345"
            ],
            "pattern": "^U[0-9]+$"
          },
          "název": {
            "type": "object",
            "properties": {
              "cs": {
                "type": "string",
                "examples": [
                  "Testovací úkon U12345"
                ]
              }
            }
          },
          "popis": {
            "type": "object",
            "properties": {
              "cs": {
                "type": "string",
                "examples": [
                  "Popis testovacího úkonu U12345"
                ]
              }
            }
          },
          "agenda": {
            "type": "string",
            "examples": [
              "agenda/A1046"
            ],
            "pattern": "^agenda/A[0-9]+$"
          },
          "elektronická-forma": {
            "type": "string",
            "examples": [
              "elektronická-forma-úkonu/1"
            ],
            "pattern": "^elektronická-forma-úkonu/[0-9]+$"
          },
          "poskytování-úkonu": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "činnost": {
                  "type": "string",
                  "examples": [
                    "činnost/A1046/CR6072"
                  ],
                  "pattern": "^činnost/A[0-9]+/CR[0-9]+$"
                },
                "poskytovatel": {
                  "type": "string",
                  "examples": [
                    "orgán-veřejné-moci/12345678-1"
                  ],
                  "pattern": "^(orgán-veřejné-moci/[0-9]{8}-[0-9]+)|(kategorie-ovm/KO[0-9]+)$"
                }
              }
            }
          },
          "subjekty-využívající-úkon": {
            "type": "array",
            "items": {
              "type": "string",
              "examples": [
                "typ-subjektu/1"
              ],
              "pattern": "^typ-subjektu/[0-9]+$"
            }
          },
          "místní-příslušnost": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "typ-subjektu": {
                  "type": "string",
                  "examples": [
                    "typ-subjektu/1"
                  ],
                  "pattern": "^typ-subjektu/[0-9]+$"
                },
                "typ-místní-příslušnosti": {
                  "type": "string",
                  "pattern": "^typ-místní-příslušnosti/[0-9]+$"
                },
                "poskytovatel-k-místní-příslušnosti": {
                  "type": "string",
                  "examples": [
                    "orgán-veřejné-moci/12345678-1"
                  ],
                  "pattern": "^(orgán-veřejné-moci/[0-9]{8}-[0-9]+)|(kategorie-ovm/KO[0-9]+)$"
                }
              }
            }
          },
          "ustanovení": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "ustanovení-právního-předpisu",
                  "pattern": "^ustanovení-právního-předpisu$"
                },
                "označení": {
                  "type": "string",
                  "examples": [
                    "247/2000 Sb."
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}