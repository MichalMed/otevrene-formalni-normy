{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/úkony.schema.json",
  "required": [
    "položky"
  ],
  "type": "object",
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "úkon",
            "pattern": "^úkon$"
          },
          "id": {
            "type": "string",
            "examples": [
              "úkon/U7"
            ],
            "pattern": "^úkon/U[0-9]+$"
          },
          "identifikátor": {
            "type": "string",
            "examples": [
              "U7"
            ],
            "pattern": "^U[0-9]+$"
          },
          "název": {
            "type": "object",
            "examples": [
              {"cs" : "Úkon C" }
            ],
            "properties": {
              "cs": {
                "type": "string"
              }
            }
          },
          "popis": {
            "type": "object",
            "examples": [
              {"cs" : "C" }
            ],
            "properties": {
              "cs": {
                "type": "string"
              }
            }
          },
          "agenda": {
            "type": "string",
            "examples": [
              "agenda/A5017"
            ],
            "pattern": "^agenda/A[0-9]+$"
          },
          "elektronická-forma": {
            "type": "string",
            "examples": [
              "elektronická-forma-úkonu/ANO"
            ],
            "pattern": "^elektronická-forma-úkonu/.+$"
          },
          "poskytování-úkonu": {
            "type": "array",
            "examples": [
              {
                "činnost" : "činnost/A5017/CR54799",
                "poskytovatel" : "orgán-veřejné-moci/00232122"
              }
            ],
            "items": {
              "type": "object",
              "properties": {
                "činnost": {
                  "type": "string",
                  "examples": [
                    "činnost/A5017/CR54799"
                  ],
                  "pattern": "^činnost/A[0-9]+/CR[0-9]+$"
                },
                "poskytovatel": {
                  "type": "string",
                  "examples": [
                    "orgán-veřejné-moci/00232122"
                  ],
                  "pattern": "^(orgán-veřejné-moci/[0-9]{8}(\\.[0-9]+)?)|(kategorie-ovm/KO[0-9]+)$"
                }
              }
            }
          },
          "subjekty-využívající-úkon": {
            "type": "array",
            "examples": [
              "typ-subjektu/PFO"
            ],
            "items": {
              "type": "string",
              "pattern": "^typ-subjektu/.+$"
            }
          },
          "místní-příslušnost": {
            "type": "array",
            "examples": [
              {
                "typ-subjektu" : "typ-subjektu/PFO",
                "typ-místní-příslušnosti" : "typ-místní-příslušnosti/M_NEMOVIT",
                "poskytovatel-k-místní-příslušnosti" : "orgán-veřejné-moci/00232122"
              }
            ],
            "items": {
              "type": "object",
              "properties": {
                "typ-subjektu": {
                  "type": "string",
                  "examples": [
                    "typ-subjektu/PFO"
                  ],
                  "pattern": "^typ-subjektu/.+$"
                },
                "typ-místní-příslušnosti": {
                  "type": "string",
                  "examples": [
                    "typ-místní-příslušnosti/M_NEMOVIT"
                  ],
                  "pattern": "^typ-místní-příslušnosti/.+$"
                },
                "poskytovatel-k-místní-příslušnosti": {
                  "type": "string",
                  "examples": [
                    "orgán-veřejné-moci/00232122"
                  ],
                  "pattern": "^(orgán-veřejné-moci/[0-9]{8}(\\.[0-9]+)?)|(kategorie-ovm/KO[0-9]+)$"
                }
              }
            }
          },
          "ustanovení": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "ustanovení-právního-předpisu",
                  "pattern": "^ustanovení-právního-předpisu$"
                },
                "označení": {
                  "type": "string",
                  "examples": [
                    "písm. c zákona č. 2/2000 Sb. - pp"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}