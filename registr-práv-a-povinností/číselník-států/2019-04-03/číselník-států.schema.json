{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/číselník-států.schema.json",
  "required": [
    "type",
    "id",
    "název-číselníku",
    "položky"
  ],
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "default": "číselník",
      "pattern": "^číselník$"
    },
    "id": {
      "type": "string",
      "default": "číselník/státy",
      "pattern": "^číselník/státy$"
    },
    "název-číselníku": {
      "type": "object",
      "properties": {
        "cs": {
          "type": "string"
        }
      }
    },
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "stát"
          },
          "id": {
            "type": "string",
            "examples": [
              "stát/280"
            ],
            "pattern": "^stát/.+$"
          },
          "kód": {
            "type": "string",
            "examples": [
              "280"
            ],
            "pattern": "^.+$"
          },
          "název": {
            "type": "object",
            "examples": [
              {"cs" : "Spolková republika Německo", "en" : "Germany"}
            ],
            "properties": {
              "cs": {
                "type": "string"
              },
              "en": {
                "type": "string"
              }
            }
          },
          "zkr-název": {
            "type": "object",
            "examples": [
              {"cs" : "Německo" }
            ],
            "properties": {
              "cs": {
                "type": "string"
              }
            }
          },
          "ekvivalent": {
            "type": "string",
            "examples": [
              "http://publications.europa.eu/resource/authority/country/DEU"
            ],
            "pattern": "^http://publications.europa.eu/resource/authority/country/[A-Z]{3}$"
          }
        }
      }
    }
  }
}