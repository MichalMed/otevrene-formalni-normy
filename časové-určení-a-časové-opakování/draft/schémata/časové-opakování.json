{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/časové-určení-a-časové-opakování/draft/schémata/časové-opakování.json",
    "type": "object",
    "title": "Časové opakování",
    "properties": {
        "frekvence": {
            "id": "#/properties/frekvence",
            "type": "string",
            "format": "iri",
            "title": "Frekvence",
            "examples": ["http://publications.europa.eu/resource/authority/frequency/BIWEEKLY"]
        },
        "den": {
            "$id": "#/properties/den",
            "type": "string",
            "format": "iri",
            "title": "Den",
            "examples": 
            ["https://data.mvcr.gov.cz/zdroj/číselníky/dny-v-týdnu/položky/pondělí"]
        },
        "časová_doba": {
            "id": "#/properties/časová_doba",
            "type": "string",
            "format": "iri",
            "title": "Časová doba",
            "examples": ["https://op.europa.eu/cs/web/eu-vocabularies/at-concept/-/resource/authority/timeperiod/OCT/?uri=http://publications.europa.eu/resource/authority/timeperiod/OCT"]
        },
        "specifická_frekvence": {
            "$id": "#/properties/specifická_frekvence",
            "type": "object",
            "title": "Specifická frekvence",
            "properties": {
                "minuta": {
                    "$id": "#/properties/specifická_frekvence/properties/minuta",
                    "type": "integer",
                    "title": "Minuta",
                    "examples": [20]
                },
                "hodina": {
                    "$id": "#/properties/specifická_frekvence/properties/hodina",
                    "type": "integer",
                    "title": "Hodina",
                    "examples": [20]
                },
                "den_v_měsíci": {
                    "$id": "#/properties/specifická_frekvence/properties/den_v_měsicí",
                    "type": "integer",
                    "title": "Den v měsíci",
                    "examples": [20]
                },
                "týden_v_měsíci": {
                    "$id": "#/properties/specifická_frekvence/properties/týden_v_měsíci",
                    "type": "integer",
                    "title": "Týden v měsíci",
                    "examples": [2]
                },
                "týden_v_roku": {
                    "$id": "#/properties/specifická_frekvence/properties/týden_v_roku",
                    "type": "integer",
                    "title": "Týden v roku",
                    "examples": [20]
                },
                "rok_v_desetiletí": {
                    "$id": "#/properties/specifická_frekvence/properties/rok_v_desetiletí",
                    "type": "integer",
                    "title": "Týden v měsíci",
                    "examples": [2]
                },
                "rok_ve_století": {
                    "$id": "#/properties/specifická_frekvence/properties/rok_ve_století",
                    "type": "integer",
                    "title": "Rok ve století",
                    "examples": [20]
                }
            }  
        }
    }
}