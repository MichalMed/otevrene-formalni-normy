{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"$id": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk.json",
	"name": "Člověk",
	"description": "Člověk a jeho jméno",
	"required": ["typ", "jméno", "příjmení"],
	"properties": {
		"typ": {
			"const": "Člověk"
		},
		"iri": {
			"type": "string",
			"format": "iri",
			"title": "Identifikátor",
			"examples": [
				"https://www.trebic.cz/zdroj/aktualita/2020/dopadení-lupiče-na-francouzské-ulici"
			]
		},
		"název": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
		},
		"popis": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
		},
		"vytvořeno": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-okamžik.json"
		},
		"relevantní_do": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-okamžik.json"
		},
		"zneplatněno": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-okamžik.json"
		},
		"příloha": {
			"$ref": "https://ofn.gov.cz/přílohy/draft/schémata/přílohy.json"
		},
		"jméno": {
			"type": "string",
			"title": "Jméno",
			"description": "Křestní jméno",
			"examples": [
				"Jakub"
			]
		},
		"příjmení": {
			"type": "string",
			"title": "Příjmení",
			"description": "Příjmení",
			"examples": [
				"Novák"
			]
		},
		"tituly_před": {
			"type": "string",
			"title": "Tituly před jménem",
			"description": "Tituly před jménem",
			"examples": [
				"RNDr."
			]
		},
		"tituly_za": {
			"type": "string",
			"title": "Tituly za jménem",
			"description": "Tituly za jménem",
			"examples": [
				"Ph.D."
			]
		},
		"pohlaví": {
			"type": "string",
			"format": "iri",
			"title": "Pohlaví",
			"examples": [
				"https://data.mvcr.gov.cz/zdroj/číselníky/pohlaví/položky/mužské"
			]
		},
		"text": {
			"type": "string",
			"title": "Celé jméno",
			"description": "Celé jméno jako jeden řetězec. Použít pokud nelze jméno strukturovat.",
			"examples": [
				"RNDr. Jakub Novák, Ph.D."
			]
		}
	}
}