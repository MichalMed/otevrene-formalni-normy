{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/příloha/draft/schémata/příloha.json",
    "type": "object",
    "title": "Příloha",
    "properties": {
        "autor": {
            "type": "object",
            "items": {
                "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
            }
        },
        "typ": {
            "type": "array",
            "items": {
                "id": "#/properties/typ",
                "type": "string",
                "format": "iri",
                "title": "Typ souboru",
                "examples": [
                        "http://www.iana.org/assignments/media-types/image/tiff"
                ]
            }
        },
        "podmínky užití": {
            "$id": "#/properties/podmínky-užití",
            "type": "array",
            "title": "Podmínky užití",
            "items": {
                "$id": "#/properties/podmínky-užití/items/podmínky-užití",
                "type": "object",
                "title": "Podmínky užití",
                "properties": {
                    "autorské_dílo": {
                        "$id": "#/properties/podmínky-užití/items/podmínky-užití/autorské-dílo",
                        "type": "string", 
                        "title": "Autorské dílo",
                        "format": "iri",
                        "examples": [
                            "https://data.gov.cz/podmínky-užití/neobsahuje-autorská-díla/"
                        ]
                    },
                    "databáze_autorské_dílo": {
                        "$id": "#/properties/podmínky-užití/items/podmínky-užití/databáze-autorské-dílo",
                        "type": "string", 
                        "title": "Databáze jako autorské dílo",
                        "format": "iri",
                        "examples": [
                            "https://data.gov.cz/podmínky-užití/není-autorskoprávně-chráněnou-databází/"
                        ]
                    },
                    "databáze_zvláštní_práva": {
                        "$id": "#/properties/podmínky-užití/items/podmínky-užití/databáze-chráněna-zvláštními-právy",
                        "type": "string", 
                        "title": "Databáze chráněna zvláštními právy",
                        "format": "iri",
                        "examples": [
                            "https://data.gov.cz/podmínky-užití/není-chráněna-zvláštním-právem-pořizovatele-databáze/"
                        ]
                    },
                    "osobní_údaje": {
                        "$id": "#/properties/podmínky-užití/items/podmínky-užití/osobní-údaje",
                        "type": "string", 
                        "title": "Osobní údaje",
                        "format": "iri",
                        "examples": [
                            "https://data.gov.cz/podmínky-užití/neobsahuje-osobní-údaje"
                        ]
                    },
                    "autorské_dílo_licence": {
                        "$id": "#/properties/podmínky-užití/items/podmínky-užití/autorské-dílo-licence",
                        "type": "string",
                        "format": "řetězec",
                        "title": "Autorské dílo - licence",
                        "examples": [
                            "CC BY 3.0 CZ"
                        ]
                    },
                    "databáze_autorské_dílo_licence":{
                        "$id": "#/properties/podmínky-užití/items/podmínky-užití/databáze-autorské-dílo-licence",
                        "type": "string",
                        "format": "řetězec",
                        "title": "Databáze autorské dílo - licence",
                        "examples": [
                            "CC BY 4.0 CZ"
                        ]
                    }
                }
            }
        }
    }
}