{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/časová-specifikace/draft/schémata/časová-specifikace.json",
    "type": "object",
    "title": "Časová specifikace",
    "properties": {
        "počet_opakování": {
            "$id": "#/properties/počet_opakování",
                    "type": "integer",
                    "title": "Počet opakování",
                    "examples": [3]
        },
        "časový interval": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-interval.json"
        },
        "jiná_časová_specifikace": {
            "$id": "#/properties/jiná_časová_specifikace",
            "type": "array",
            "format": "iri",
            "title": "Jiná časová specifikace",
            "examples": 
            ["https://data.mvcr.gov.cz/zdroj/číselníky/jiná-časová-specifikace/položky/dobré-počasí"]  
        },
        "den_v_týdnu": {
            "$id": "#/properties/den_v_týdnu",
            "type": "array",
            "format": "iri",
            "title": "Den v týdnu",
            "examples": 
            ["https://data.mvcr.gov.cz/zdroj/číselníky/dny-v-týdnu/položky/pondělí"]
        },        
        "časová_doba": {
            "id": "#/properties/časová_doba",
            "type": "array",
            "format": "iri",
            "title": "Časová doba",
            "examples": ["https://op.europa.eu/cs/web/eu-vocabularies/at-concept/-/resource/authority/timeperiod/OCT/?uri=http://publications.europa.eu/resource/authority/timeperiod/OCT"]
        },        
        "frekvence": {
            "id": "#/properties/frekvence",
            "type": "array",
            "format": "iri",
            "title": "Frekvence",
            "examples": ["http://publications.europa.eu/resource/authority/frequency/BIWEEKLY"]
        },
        "specifická_frekvence": {
            "$id": "#/properties/specifická_frekvence",
            "type": "object",
            "title": "Specifická frekvence",
            "properties": {
                "minuta": {
                    "$id": "#/properties/specifická_frekvence/properties/minuta",
                    "type": "integer",
                    "title": "Minuta",
                    "examples": [20]
                },
                "hodina": {
                    "$id": "#/properties/specifická_frekvence/properties/hodina",
                    "type": "integer",
                    "title": "Hodina",
                    "examples": [20]
                },
                "den_v_měsíci": {
                    "$id": "#/properties/specifická_frekvence/properties/den_v_měsicí",
                    "type": "integer",
                    "title": "Den v měsíci",
                    "examples": [20]
                },
                "týden_v_měsíci": {
                    "$id": "#/properties/specifická_frekvence/properties/týden_v_měsíci",
                    "type": "integer",
                    "title": "Týden v měsíci",
                    "examples": [2]
                },
                "týden_v_roku": {
                    "$id": "#/properties/specifická_frekvence/properties/týden_v_roku",
                    "type": "integer",
                    "title": "Týden v roku",
                    "examples": [20]
                },
                "rok_v_desetiletí": {
                    "$id": "#/properties/specifická_frekvence/properties/rok_v_desetiletí",
                    "type": "integer",
                    "title": "Týden v měsíci",
                    "examples": [2]
                },
                "rok_ve_století": {
                    "$id": "#/properties/specifická_frekvence/properties/rok_ve_století",
                    "type": "integer",
                    "title": "Rok ve století",
                    "examples": [20]
                }
            }  
        },
        "výjimka": {
            "$ref": "https://ofn.gov.cz/časová-specifikace/draft/schémata/časová-specifikace.json"
        },
        "časová_platnost": {
            "$ref": "https://ofn.gov.cz/časová-specifikace/draft/schémata/časová-specifikace.json"
        }
    }
}