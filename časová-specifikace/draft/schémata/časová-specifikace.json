{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"$id": "https://ofn.gov.cz/časová-specifikace/draft/schémata/časová-specifikace.json",
	"type": "object",
	"title": "Časová specifikace",
	"required": ["typ"],
	"properties": {
		"typ": {
			"const": "Časová specifikace"
		},
		"iri": {

			"type": "string",
			"format": "iri",
			"title": "Identifikátor",
			"examples": [
				"https://www.trebic.cz/zdroj/aktualita/2020/dopadení-lupiče-na-francouzské-ulici"
			]
		},
		"název": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
		},
		"popis": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
		},
		"vytvořeno": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-okamžik.json"
		},
		"aktualizováno": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-okamžik.json"
		},
		"relevantní_do": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-okamžik.json"
		},
		"zneplatněno": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-okamžik.json"
		},
		"příloha": {
			"$ref": "https://ofn.gov.cz/digitální-objekty/draft/schémata/digitální-objekty.json"
		},
		"počet_opakování": {
			"type": "integer",
			"title": "Počet opakování",
			"examples": [
				3
			]
		},
		"časový_interval": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-interval.json"
		},
		"jiná_časová_specifikace": {
			"type": "array",
			"items": {
				"type": "string",
				"format": "iri",
				"pattern": "^https\\:\/\/data\\.mvcr\\.gov\\.cz\/zdroj\/číselníky\/jiná-časová-specifikace\/položky\/.*$",
				"title": "Jiná časová specifikace",
				"examples": [
					"https://data.mvcr.gov.cz/zdroj/číselníky/jiná-časová-specifikace/položky/dobré-počasí"
				]
			}
		},
		"den_v_týdnu": {
			"type": "array",
			"items": {
				"type": "string",
				"format": "iri",
				"pattern": "^https\\:\/\/data\\.mvcr\\.gov\\.cz\/zdroj\/číselníky\/dny-v-týdnu\/položky\/.*$",
				"title": "Den v týdnu",
				"examples": [
					"https://data.mvcr.gov.cz/zdroj/číselníky/dny-v-týdnu/položky/pondělí"
				]
			}
		},
		"časové_období": {
			"type": "array",
			"items": {
				"type": "string",
				"format": "iri",
				"pattern": "^http\\:\/\/publications\\.europa\\.eu\/resource\/authority\/timeperiod\/.*$",
				"title": "Časová doba",
				"examples": [
					"http://publications.europa.eu/resource/authority/timeperiod/OCT"
				]
			}
		},
		"frekvence": {
			"type": "array",
			"items": {
				"type": "string",
				"format": "iri",
				"pattern": "^http\\:\/\/publications\\.europa\\.eu\/resource\/authority\/frequency\/.*$",
				"title": "Frekvence",
				"examples": [
					"http://publications.europa.eu/resource/authority/frequency/BIWEEKLY"
				]
			}
		},
		"časová_doba": {
			"type": "array",
			"items": {
				"type": "object",
				"oneOf": [{
						"type": "object",
						"required": ["typ", "čas"],
						"properties": {
							"typ": {
								"const": "Časová doba"
							},
							"čas": {
								"type": "string",
								"format": "time",
								"title": "Konkrétní čas.",
								"examples": [
									"08:00:00"
								]
							}
						}
					},
					{
						"type": "object",
						"required": ["typ", "od", "do"],
						"properties": {
							"typ": {
								"const": "Časová doba"
							},
							"od": {
								"type": "string",
								"format": "time",
								"title": "Začátek časového vymezení.",
								"examples": [
									"08:00:00"
								]
							},
							"do": {
								"type": "string",
								"format": "time",
								"title": "Konec časového vymezení.",
								"examples": [
									"23:00:00"
								]
							}
						}
					}

				]
			}
		},
		"specifická_frekvence": {
			"type": "array",
			"title": "Specifická frekvence",
			"items": {
				"type": "object",
				"title": "Specifická frekvence",
				"required": ["typ"],
				"properties": {
					"typ": {
						"const": "Specifická frekvence"
					},
					"minuta": {
						"type": "integer",
						"title": "Minuta",
						"examples": [
							20
						]
					},
					"hodina": {
						"type": "integer",
						"title": "Hodina",
						"examples": [
							20
						]
					},
					"den_v_měsíci": {
						"type": "integer",
						"title": "Den v měsíci",
						"examples": [
							20
						]
					},
					"týden_v_měsíci": {
						"type": "integer",
						"title": "Týden v měsíci",
						"examples": [
							2
						]
					},
					"týden_v_roku": {
						"type": "integer",
						"title": "Týden v roku",
						"examples": [
							20
						]
					},
					"rok_v_desetiletí": {
						"type": "integer",
						"title": "Týden v měsíci",
						"examples": [
							2
						]

					},
					"rok_ve_století": {
						"type": "integer",
						"title": "Rok ve století",
						"examples": [
							20
						]
					}
				}
			}
		},
		"výjimka": {
			"$ref": "https://ofn.gov.cz/časová-specifikace/draft/schémata/seznam-časových-specifikací.json"
		},
		"časová_platnost": {
			"$ref": "https://ofn.gov.cz/časová-specifikace/draft/schémata/seznam-časových-specifikací.json"
		}
	}
}