{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/akce/draft/schémata/akce.json",
    "type": "array",
    "title": "Akce",
    "items": {
        "$id": "#/items",
        "type": "object",
        "title": "Akce",
        "properties": {
            "iri": {
                "$id": "#/items/properties/id",
                "type": "string",
                "format": "iri",
                "title": "Identifikátor",
                "description": "",
                "examples": [
                    "https://brno.cz/zdroj/akce/abcd"
                ]
            },
            "název": {
                "$id": "#/items/properties/název",
                "type": "string",
                "title": "Název",
                "description": "Název akce sloužící pro rychlou identifikace události.",
                "examples": [
                    "Babylonfest"
                ]
            },
            "popis": {
                "$id": "#/items/properties/popis",
                "type": "string",
                "title": "Popis",
                "description": "Popis akce",
                "examples": [
                    "Babylonfest je setkáním společného soužití menšin a seznámení se s jednotlivými kulturami národů, které žijí v Brně. Široké veřejnosti ukazuje tradiční lidovou kulturu a prezentuje život národnostních menšin."
                ]
            },
            "pořadatel": {
                "type": "array",
                "items": {
                    "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
                }
            },
            "umístění": {
                "type": "array",
                "items": {
                    "$ref": "https://ofn.gov.cz/umístění/draft/schémata/umístění.json"
                }
            },
            "trvání": {
                "type": "array",
                "items": {
                    "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-interval.json"
                }
            },
            "kontakt": {
                "type": "array",
                "items": {
                    "$ref": "https://ofn.gov.cz/kontakty/draft/schémata/kontakt.json"
                }
            },
            "vstupné": {
                "type": "array",
                "items": {
                    "$id": "#/items/properties/vstupné/items",
                    "type": "object",
                    "title": "Vstupné",
                    "description": "Typ vstupného",
                    "properties": {
                        "název": {
                            "$id": "#/items/properties/vstupné/items/properties/název",
                            "type": "string",
                            "title": "Název typu vstupného",
                            "description": "Název typu vstupného.",
                            "examples": [
                                "Pro dospělé"
                            ]
                        },
                        "podmínka": {
                            "$id": "#/items/properties/vstupné/items/properties/podmínka",
                            "type": "string",
                            "title": "Podmínka",
                            "description": "Podmínky vstupného.",
                            "examples": [
                                "Občané starší 18 let, kteří nevyužívají slevy (ZTP, studenti)."
                            ]
                        },
                        "částka": {
                            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/částka.json"
                        }
                    }
                }
            }
        }
    }
}