{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"name": "Osoba",
	"description": "Právnická osoba a její identifikace",
	"properties": {
		"ičo": {
			"type": "string",
			"title": "IČO",
			"description": "IČO",
			"examples": [
				"00112233"
			]
		},
		"název": {
			"type": "string",
			"title": "Název",
			"description": "Název právnické osoby.",
			"examples": [
				"MojeFirma s.r.o."
			]
		},
		"stát_registrace": {
			"type": "object",
			"title": "Stát registrace",
			"description": "Stát registrace právnické osoby",
			"required": ["kód"],
			"properties": {
				"název": {
					"type": "string",
					"title": "Název státu registrace",
					"description": "Název státu registrace",
					"examples": [
						"Slovensko"
					]
				},
				"kód": {
					"type": "string",
					"title": "Kód státu registrace",
					"description": "Kód státu registrace",
					"examples": [
						"SVK"
					]
				}
			}
		}
	}
}