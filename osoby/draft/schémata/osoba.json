{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://data.gov.cz/otevřené-formální-normy/osoby/draft/schémata/osoba.json",
    "name": "Osoba",
	"type": "object",
    "description": "Právnická osoba a její identifikace",
    "properties": {
        "ičo": {
            "$id": "#/properties/ičo",
            "type": "string",
            "title": "IČO",
            "description": "IČO",
            "examples": [
                "00112233"
            ]
        },
        "název": {
            "$id": "#/properties/název",
            "type": "string",
            "title": "Název",
            "description": "Název právnické osoby.",
            "examples": [
                "MojeFirma s.r.o."
            ]
        },
        "stát_registrace": {
            "$id": "#/properties/stát_registrace",
            "type": "object",
            "title": "Stát registrace",
            "description": "Stát registrace právnické osoby",
            "required": [ "kód" ],
            "properties": {
                "kód": {
                    "$id": "#/properties/stát_registrace/properties/kód",
                    "type": "string",
                    "title": "Kód státu registrace",
                    "description": "Kód státu registrace",
                    "examples": [
                        "SVK"
                    ]
                },
                "název": {
                    "$id": "#/properties/stát_registrace/properties/název",
                    "type": "string",
                    "title": "Název státu registrace",
                    "description": "Název státu registrace",
                    "examples": [
                        "Slovensko"
                    ]
                }
            }
        }
    }
}