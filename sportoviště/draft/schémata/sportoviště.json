{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/sportoviště/draft/schémata/sportoviště.json",
    "type": "object",
    "title": "Sportoviště",
    "properties": {
        "iri": {
            "$id": "#/properties/iri",
            "type": "string",
            "format": "iri",
            "title": "Identifikátor",
            "examples": [
                "http://www.hulkgym.cz/zdroj/gym/pardubice/"
            ]
        },
        "název": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
        },
        "popis": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
        },
        "podmínky_užívání": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
        },
        "provozní_řád": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
        },
        "obrázek": {
            "$id": "#/properties/obrázek",
            "type": "array",
            "title": "Obrázek",
            "items": {
                "$id": "#properties/obrázek/items/obrázek",
                "type": "object",
                "title": "Obrázek",
                "properties": {
                    "iri": {
                        "$id": "#properties/obrázek/items/obrázek/properties/iri",
                        "type": "string",
                        "title": "iri",
                        "examples": [
                            "https://lh4.googleusercontent.com/-coBNWHyjNxM/U0vvFoBJ5_I/AAAAAAAAAOM/kfD5TgF6sl4/w724-h407-no/lu%25C5%25BE%25C3%25A1nky.PNG.jpg"
                        ]
                    }
                }
            }
        },
        "provozovatel": {
            "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
        },
        "vlastník": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
            }
        },
        "umístění": {
            "$ref": "https://ofn.gov.cz/umístění/draft/schémata/umístění.json"
        },
        "kontakt": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/kontakty/draft/schémata/kontakt.json"
            }
        },
        "bezbariérovost": {
            "$ref": "https://ofn.gov.cz/bezbariérovost/draft/schémata/bezbariérovost.json"
        },
        "vstupné": {
            "$ref": "https://ofn.gov.cz/vstupné/draft/schémata/více-vstupných.json"     
        },  
        "otevírací_doba": {
            "$ref": "https://ofn.gov.cz/časová-specifikace/draft/schémata/seznam-časovových-specifikací.json"
        },
        "doplňková_služba": {
            "$id": "#/properties/doplňková-služba",
            "type": "array",
            "title": "Doplňková služba",
            "items": {
                "$id": "#/properties/doplňková-služba/items/doplňková-služba",
                "type": "object",
                "title": "Doplňková služba",
                "properties": {
                    "název": {
                        "$id": "#/properties/doplňková-služba/items/doplňková-služba/properties/název",
                        "ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json",
                        "title": "Název"
                    }    
                }
            }
        },
        "sport": {
            "id": "#/properties/sport",
            "type": "array",
            "format": "iri",
            "title": "Sport",
            "examples": [
                "https://data.mvcr.gov.cz/zdroj/číselníky/sporty/položky/4"
            ]
        },
        "typ": {
            "id": "#/items/properties/typ",
            "type": "array",
            "format": "iri",
            "title": "Typ",
            "examples": [
                "https://data.mvcr.gov.cz/zdroj/číselníky/typy-sportovišť/položky/bazén"
            ]
        }
    }
}