{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/sportoviště/draft/schémata/sportoviště.json",
    "type": "object",
    "title": "Sportoviště",
    "properties": {
        "podmínky_užívání": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
        },
        "provozní_řád": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
        },
        "provozovatel": {
            "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
        },
        "vlastník": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
            }
        },
        "umístění": {
            "$ref": "https://ofn.gov.cz/umístění/draft/schémata/umístění.json"
        },
        "kontakt": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/kontakty/draft/schémata/kontakt.json"
            }
        },
        "bezbariérovost": {
            "$ref": "https://ofn.gov.cz/bezbariérovost/draft/schémata/bezbariérovost.json"
        },
        "vstupné": {
            "$ref": "https://ofn.gov.cz/vstupné/draft/schémata/více-vstupných.json"     
        },  
        "otevírací_doba": {
            "$ref": "https://ofn.gov.cz/časová-specifikace/draft/schémata/časová-specifikace.json"
        },
        "doplňková_služba": {
            "$id": "#/properties/doplňková-služba",
            "type": "array",
            "title": "Doplňková služba",
            "additionalProperties": {
                "$ref": "https://ofn.gov.cz/věc/draft/schémata/věc.json"
                }
        },
        "sport": {
            "id": "#/properties/sport",
            "type": "array",
            "format": "iri",
            "title": "Sport",
            "examples": [
                "https://data.mvcr.gov.cz/zdroj/číselníky/sporty/položky/4"
            ]
        },
        "typ": {
            "id": "#/items/properties/typ",
            "type": "array",
            "format": "iri",
            "title": "Typ",
            "examples": [
                "https://data.mvcr.gov.cz/zdroj/číselníky/typy-sportovišť/položky/bazén"
            ]
        },
        "additionalProperties": {
            "$ref": "https://ofn.gov.cz/věc/draft/schémata/věc.json"
        }
    }
}