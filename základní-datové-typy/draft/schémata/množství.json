{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/množství.json",
    "type": "object",
    "title": "Množství",
    "required": ["hodnota", "jednotka"],
    "properties": {
        "hodnota": {
            "$id": "#properties/hodnota",
            "type": "number",
            "title": "Hodnota",
            "examples": [
                1000.1
            ]
        },
        "jednotka": {
            "$id": "#properties/jednotka",
            "type": "string",
            "title": "Jednotka",
            "examples": [
                "KGM"
            ]
        }
    }
}