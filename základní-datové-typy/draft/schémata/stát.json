{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://data.gov.cz/otevřené-formální-normy/osoby/draft/schémata/stát.json",
    "name": "Stát",
    "type": "object",
    "description": "Identifikace státu",
    "anyOf": [{
            "required": ["iri"],
            "properties": {
                "iri": {
                    "$id": "#/properties/iri",
                    "type": "string",
                    "format": "iri",
                    "title": "IRI státu",
                    "description": "IRI státu",
                    "examples": [
                        "http://publications.europa.eu/resource/authority/country/SVK"
                    ]
                }
            }
        },
        {
            "required": ["kód"],
            "properties": {
                "kód": {
                    "$id": "#/properties/kód",
                    "type": "string",
                    "title": "Kód státu",
                    "description": "Kód státu",
                    "examples": [
                        "SVK"
                    ]
                },
                "název": {
                    "$id": "#/properties/název",
                    "type": "string",
                    "title": "Název státu registrace",
                    "description": "Název státu registrace",
                    "examples": [
                        "Slovensko"
                    ]
                }
            }
        }
    ]
}