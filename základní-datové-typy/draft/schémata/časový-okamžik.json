{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"$id": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-okamžik.json",
	"title": "Časový okamžik",
	"type": "object",
	"description": "Časový okamžik - datum, čas, nebo datum a čas",
	"oneOf": [{
			"required": ["typ", "datum"],
			"properties": {
				"typ": {
					"const": "Časový okamžik"
				},
				"datum": {
					"$id": "#/anyOf/properties/datum",
					"type": "string",
					"format": "date",
					"title": "Datum okamžiku.",
					"examples": [
						"2019-01-01+01:00"
					]
				}
			}
		},
		{
			"required": ["typ", "čas"],
			"properties": {
				"typ": {
					"const": "Časový okamžik"
				},
				"čas": {
					"$id": "#/anyOf/properties/čas",
					"type": "string",
					"format": "time",
					"title": "Čas okamžiku.",
					"examples": [
						"09:30:00"
					]
				}
			}
		},
		{

			"required": ["typ", "datum_a_čas"],
			"properties": {
				"typ": {
					"const": "Časový okamžik"
				},
				"datum_a_čas": {
					"$id": "#/anyOf/properties/datum_a_čas",
					"type": "string",
					"format": "date-time",
					"title": "Datum a čas okamžiku.",
					"examples": [
						"2019-01-01T09:30:10.5+01:00"
					]
				}
			}
		},
		{

			"required": ["typ", "nespecifikovaný"],
			"properties": {
				"typ": {
					"const": "Časový okamžik"
				},
				"nespecifikovaný": {
					"$id": "#/anyOf/properties/nespecifikovaný",
					"type": "boolean",
					"title": "Nespecifikovaný okamžik",
					"examples": [
						true
					]
				}
			}
		}
	]
}