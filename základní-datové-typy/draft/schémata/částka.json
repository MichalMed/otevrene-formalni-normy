{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/částka.json",
    "type": "object",
    "title": "Částka",
    "required": ["výše", "měna"],
    "properties": {
        "výše": {
            "$id": "#/properties/výše",
            "type": "number",
            "title": "Výše",
            "examples": [
                1000.1
            ]
        },
        "měna": {
            "$id": "#/properties/měna",
            "type": "string",
            "format": "iri",
            "pattern": "^http\\:\/\/publications\\.europa\\.eu\/resource\/authority\/currency\/.*$",
            "title": "Měna",
            "examples": [
                "http://publications.europa.eu/resource/authority/currency/CZK"
            ]
        }
    }
}