{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://ofn.gov.cz/věda-a-výzkum/draft/schémata/publikace.json",
    "name": "Publikace",
    "description": "Publikace",
    "required": ["typ"],
    "properties": {
        "typ": {
			"const": "Publikace"
		},
		"iri": {
			"type": "string",
			"format": "iri",
			"title": "Identifikátor",
			"examples": [
				"https://www.trebic.cz/zdroj/aktualita/2020/dopadení-lupiče-na-francouzské-ulici"
			]
		},
		"název": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/text.json"
		},
		"popis": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/text.json"
		},
		"vytvořeno": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/časový-okamžik.json"
		},
		"aktualizováno": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/časový-okamžik.json"
		},
		"relevantní_do": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/časový-okamžik.json"
		},
		"zneplatněno": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/časový-okamžik.json"
		},
		"příloha": {
			"$ref": "https://ofn.gov.cz/digitální-objekty/2020-07-01/schémata/digitální-objekty.json"
		},
		"doi": {
            "type": "string",
            "title": "DOI",
            "description": "Identifikátor digitálního objektu",
            "examples": [
                "10.26615/978-954-452-056-4_144"
            ]
        }
    }
}