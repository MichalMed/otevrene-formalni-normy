{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://ofn.gov.cz/věda-a-výzkum/draft/schémata/výzkumník.json",
    "name": "Výzkumník",
    "description": "Výzkumník",
    "required": ["jméno", "příjmení"],
    "properties": {
        "jméno": {
            "type": "string",
            "title": "Jméno",
            "description": "Křestní jméno",
            "examples": [
                "Jakub"
            ]
        },
        "příjmení": {
            "type": "string",
            "title": "Příjmení",
            "description": "Příjmení",
            "examples": [
                "Klímek"
            ]
        },
        "tituly_před": {
            "type": "string",
            "title": "Tituly před jménem",
            "description": "Tituly před jménem",
            "examples": [
                "RNDr."
            ]
        },
        "tituly_za": {
            "type": "string",
            "title": "Tituly za jménem",
            "description": "Tituly za jménem",
            "examples": [
                "Ph.D."
            ]
        },
        "pohlaví": {

            "type": "string",
            "format": "iri",
            "title": "Pohlaví",
            "examples": [
                "https://data.mvcr.gov.cz/zdroj/číselníky/pohlaví/položky/mužské"
            ]
        },
        "text": {
            "type": "string",
            "title": "Celé jméno",
            "description": "Celé jméno jako jeden řetězec. Použít pokud nelze jméno strukturovat.",
            "examples": [
                "RNDr. Jakub Klímek, Ph.D."
            ]
        },
        "orcid": {
            "type": "string",
			"format": "iri",
            "title": "ORCID iD",
            "description": "URL profilu ORCID.",
            "examples": [
                "https://orcid.org/0000-0001-7234-3051"
            ]
        },
        "researcherid": {
            "type": "string",
            "title": "ResearcherID",
            "description": "ResearcherID z portálu Publons.",
            "examples": [
                "K-1134-2014"
            ]
        },
		"scopus_author_id": {
            "type": "string",
            "title": "Scopus Author ID",
            "description": "Author ID z portálu Scopus.",
            "examples": [
                "35956632500"
            ]
        }
    }
}