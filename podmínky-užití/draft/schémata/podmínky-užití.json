{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://ofn.gov.cz/podmínky-užití/draft/schémata/podmínky-užití.json",
    "type": "object",
    "title": "Podmínky užití",
    "properties": {
        "autor": {
            "type": "object",
            "items": {
                "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
            }
        },
        "typ": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "iri",
                "title": "Typ souboru",
                "examples": [
                        "http://www.iana.org/assignments/media-types/image/tiff"
                ]
            }
        },
        "podmínky užití": {
            "type": "array",
            "title": "Podmínky užití",
            "items": {
                "type": "object",
                "title": "Podmínky užití",
                "properties": {
                    "autorské_dílo": {
                        "type": "string", 
                        "title": "Autorské dílo",
                        "format": "iri",
                        "examples": [
                            "https://data.gov.cz/podmínky-užití/neobsahuje-autorská-díla/"
                        ]
                    },
                    "databáze_autorské_dílo": {
                        "type": "string", 
                        "title": "Databáze jako autorské dílo",
                        "format": "iri",
                        "examples": [
                            "https://data.gov.cz/podmínky-užití/není-autorskoprávně-chráněnou-databází/"
                        ]
                    },
                    "databáze_zvláštní_práva": {

                        "type": "string", 
                        "title": "Databáze chráněna zvláštními právy",
                        "format": "iri",
                        "examples": [
                            "https://data.gov.cz/podmínky-užití/není-chráněna-zvláštním-právem-pořizovatele-databáze/"
                        ]
                    },
                    "osobní_údaje": {

                        "type": "string", 
                        "title": "Osobní údaje",
                        "format": "iri",
                        "examples": [
                            "https://data.gov.cz/podmínky-užití/neobsahuje-osobní-údaje"
                        ]
                    },
                    "autoři_díla": {

                        "type": "string",
                        "format": "řetězec",
                        "title": "Autoři díla",
                        "examples": [
                            "František Svoboda"
                        ]
                    },
                    "autoři_originální_databáze":{

                        "type": "string",
                        "format": "řetězec",
                        "title": "Autoři originální databáze",
                        "examples": [
                            "František Novák"
                        ]
                    }
                }
            }
        }
    }
}