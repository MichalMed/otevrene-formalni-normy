          "title": "The Děti_s_doprovodem_objekt_přístupnost Schema",
          "required": [
            "cs",
            "en"
          ],
          "properties": {
            "cs": {
              "$id": "#/properties/děti_s_doprovodem/properties/děti_s_doprovodem_objekt_přístupnost/properties/cs",
              "type": "string",
              "title": "The Cs Schema",
              "default": "",
              "examples": [
                "částečně přístupný"
              ],
              "pattern": "^(.*)$"
            },
            "en": {
              "$id": "#/properties/děti_s_doprovodem/properties/děti_s_doprovodem_objekt_přístupnost/properties/en",
              "type": "string",
              "title": "The En Schema",
              "default": "",
              "examples": [
                "partially accessible"
              ],
              "pattern": "^(.*)$"
            }
          }
        }
      }
    },
    "tělesně_postižení": {
