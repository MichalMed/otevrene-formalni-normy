              ],
              "pattern": "^(.*)$"
            },
            "en": {
              "$id": "#/properties/tělesně_postižení/properties/tělesně_postižení_objekt_přístupnost/properties/en",
              "type": "string",
              "title": "The En Schema",
              "default": "",
              "examples": [
                "partially accessible"
              ],
              "pattern": "^(.*)$"
            }
          }
        },
        "tělesně_postižení_toaleta_přístupnost": {
          "$id": "#/properties/tělesně_postižení/properties/tělesně_postižení_toaleta_přístupnost",
