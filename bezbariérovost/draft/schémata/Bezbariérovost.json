{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/bezbariérovost/draft/schémata/bezbariérovost.json",
    "type": "array",
    "title": "Bezbariérovost",
    "items": {
        "$id": "#/items",
        "type": "object",
        "title": "Bezbariérovost",
        "properties": {
            "popis": {
                "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
            },
            "obrázek": {
                    "$id": "#/items/properties/id",
                    "type": "string",
                    "format": "iri",
                    "title": "Obrázek",
                    "description": "Obrázek daného objektu",
                    "examples": [
                      "https://www.vozejkmap.cz/83465-verejny-zachody-pro-vozickare"
                      ]
            },
            "zrakově omezení": {
                "type": "array",
                "items": {
                    "$id": "#/items/properties/zrakově-omezení/items",
                    "type": "object",
                    "title": "Zrakově omezení",
                    "description": "Poskytuje základní přehled o vybavenosti objektu pro zrakově postižené.",
                    "properties": {
                        "braillové písmo": {
                            "$id": "#/items/properties/id",
                            "type": "boolean",
                            "title": "Braillové písmo",
                            "description": "Říká, zda je v objektu k dispozici popis v Braillovém písmu.",
                            "examples": true
                        },
                        "hlasový asistent": {
                            "$id": "#/items/properties/id",
                            "type": "boolean",
                            "title": "Hlasový asistent",
                            "description": "Říká, zda je v objektu k dispozici hlasový asistent.",
                            "examples": true
                        },
                        "vodící linie": {
                            "$id": "#/items/properties/id",
                            "type": "boolean",
                            "title": "Vodící linie",
                            "description": "Říká, zda jsou v objektu k dispozici vodící linie.",
                            "examples": true
                        },
                        "asistenční pes": {
                            "$id": "#/items/properties/id",
                            "type": "boolean",
                            "title": "Asistenční pes",
                            "description": "Říká, zda je v objektu možnost mít k dispozici asistenčního psa.",
                            "examples": true
                        }, 
                        "hodnocení přístupnosti": {
                            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
                        }
                    }
                }
            },
            "pohybově omezení": {
                "type": "array",
                "items": {
                    "$id": "#/items/properties/pohybově-omezení/items",
                    "type": "object",
                    "title": "Pohybově omezení",
                    "description": "Poskytuje základní přehled o vybavenosti objektu pro pohybově omezené.",
                    "properties": {
                        "bezbariérové parkování": {
                            "$id": "#/items/properties/id",
                            "type": "boolean",
                            "title": "Bezbariérové parkování",
                            "description": "Říká, zda je v objektu umožněno bazbariérově zaparkovat.",
                            "examples": true
                        },
                        "bezbariérový vstup": {
                            "$id": "#/items/properties/id",
                            "type": "boolean",
                            "title": "Bezbariérový vstup",
                            "description": "Říká, zda má objekt bezbariérový vstup.",
                            "examples": true
                        },
                        "bezbariérová toaleta": {
                            "$id": "#/items/properties/id",
                            "type": "boolean",
                            "title": "Bezbariérová toaleta",
                            "description": "Říká, zda je v objektu bezbariérová toaleta.",
                            "examples": false
                        },
                        "přístupnost podlaží": {
                            "$id": "#/items/properties/id",
                            "type": "boolean",
                            "title": "Přístupnost podlaží",
                            "description": "Říká, zda jsou v objektu všechna podlaží přístupná pro fyzicky hendikepované.",
                            "examples": true
                        },
                        "asistenční pes": {
                            "$id": "#/items/properties/id",
                            "type": "boolean",
                            "title": "Asistenční pes",
                            "description": "Říká, zda je v objektu možnost mít k dispozici asistenčního psa.",
                            "examples": true
                        }, 
                        "hodnocení přístupnosti": {
                            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
                        }
                    }
                }
            }
        }
    }
}