{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ofn.gov.cz/události/draft/schémata/události.json",
    "type": "object",
    "title": "Události",
    "properties": {
        "iri": {
            "$id": "#/properties/iri",
            "type": "string",
            "format": "iri",
            "title": "Identifikátor",
            "examples": ["https://data.brno.cz/zdroj/události/2019/vinobraní"]
        },
        "název": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
        },
        "popis": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
        },
        "dlouhý_popis": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
        },
        "vhodné_pro_děti": {
            "$id": "#/properties/vhodné_pro_děti",
            "type": "boolean",
            "title": "Vhodné pro děti",
            "examples": true
        },
        "vhodné_pro_zvířata": {
            "$id": "#/properties/vhodné_pro_zvířata",
            "type": "boolean",
            "title": "Vhodné pro zvířata",
            "examples": true
        },
        "registrace": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
        },
        "obrázek": {
            "type": "array",
            "items": {
                "$id": "#/properties/obrázek/items/obrázek",
                "type": "string",
                "format": "iri",
                "title": "Obrázek",
                "examples": ["http://foto.turistika.cz/foto/30002/77410/full_f4efe4_znojemskehistorickevinobrani3.jpg"]
            }
        },
        "pořadatel": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
            }
        },
        "hlavní_sponzor": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
            }
        },
        "sponzor": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
            }
        },
        "mediální_partner": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
            }
        },
        "záštita": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/lidé-a-osoby/draft/schémata/člověk-či-osoba.json"
            }
        },
        "umístění": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/umístění/draft/schémata/umístění.json"
            }
        },
        "typ": {
            "type": "array",
            "items": {
                "id": "#/properties/typ/items/typ",
                "type": "string",
                "format": "iri",
                "title": "Typ události",
                "examples": ["https://data.mvcr.gov.cz/zdroj/číselníky/typy-událostí/položky/muzikál"]
            }
        },            
        "téma": {
            "type": "array",
            "items": {
                "id": "#/properties/téma/items/téma",
                "type": "string",
                "format": "iri",
                "title": "Téma události",
                "examples": ["https://data.mvcr.gov.cz/zdroj/číselníky/témata-událostí/položky/umění-a-kultura"]
            }
        },
        "trvání": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/časový-interval.json"
            }
        },
        "kontakt": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/kontakty/draft/schémata/kontakt.json"
            }
        },
        "vstupné": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/vstupné/draft/schémata/vstupné.json"
            }
        },
        "dílčí_událost": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/události/draft/schémata/události.json"
            }
        },
        "zaštitující_událost": {
            "type": "array",
            "items": {
                "$ref": "https://ofn.gov.cz/události/draft/schémata/události.json"
            }
        }
    }
}